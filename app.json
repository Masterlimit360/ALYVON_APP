{
  "expo": {
    "name": "ALYVON",
    "slug": "ALYVON",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ALYVON-logo.png",
    "scheme": "alyvon",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.alyvon"
    },
    "android": {
      "package": "com.yourcompany.alyvon",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/ALYVON-logo.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/ALYVON-logo.png",
          "imageWidth": 320,
          "resizeMode": "contain",
          "backgroundColor": "#0B1220"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow ALYVON to use your location to track deliveries and provide better service."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ALYVON to access your photos to upload profile pictures and item images."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
